<!-- Hero -->
<header id="top" class="hero">
  <div class="text-vertical-center">
    <h1><a href="https://www.biggerpockets.com/"><%= inline_svg 'branding/logo-pocket.svg', class: 'logo-header' %></a>
    </h1>
    <p>PRESENTS</p>
    <h3>STAR CHAT</h3>
    <br>
    <%= link_to "CHAT NOW", new_user_registration_path, class: 'btn btn-dark btn-lg' %>
  </div>
</header>

<!-- About -->
<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Asynchronous Chat with someone in a galaxy far, far away....</h2>
        <p class="lead">faster than a new version of anything by Microsoft needing to be patched</p>
        <p class="small">POWERED BY</p>
        <p>Action Cable</p>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>

<!-- support -->
<!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
<section id="support" class="support bg-primary">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-10 col-lg-offset-1">
        <h2>Chat with galaxy-class droid support</h2>
        <hr class="small">
        <div class="row">
          <%= render partial: 'users/droid', collection: @droids %>
        </div>
        <!-- /.row (nested) -->
      </div>
      <!-- /.col-lg-10 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>

<!-- Callout -->
<aside class="callout">
  <div class="text-vertical-center">
    <h1 class="text-center">Save Time for the Important<br>Things in Life</h1>
    <hr class="small">
  </div>
</aside>

<!-- Save Time -->
<section id="save-time" class="save-time">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 text-center">
        <div class="row">
          <%= render partial: 'visitors/hobby', collection: hobbies %>
        </div>
        <!-- /.row (nested) -->
        <%= link_to "CHAT NOW", new_user_registration_path, class: 'btn btn-dark btn-lg' %>
      </div>
      <!-- /.col-lg-10 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>

<!-- Call to Action -->
<aside class="call-to-action bg-primary">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h3>HEAD QUARTERED IN DENVER, COLORAD0, USA, EARTH</h3>
      </div>
    </div>
  </div>
</aside>

